@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input id="id" type="hidden" asp-for="Id" />
        <input type="button" value="Delete" class="btn btn-danger" onclick="DeleteMovie();" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script lang="en" type="text/javascript">
    function DeleteMovie() {
        var movieDetails = GetMovieDetails();
        $.ajax({
            type: "POST",
            traditional: true,
            async: false,
            cache: false,
            url: '/Movies/Delete/' + document.getElementById("id").value,
            context: document.body,
            data: movieDetails,
            success: function (xhr) {
                window.location.href = '@Url.Action("Index", "Movies")';
            },
            error: function (xhr) {
                console.log(xhr.responseText);
                alert("Error has occurred.. " + xhr.responseText);
            }
        });
    }
    function GetMovieDetails() {
        var movieDetails = "";
        movieDetails += "Id=" + document.getElementById("id").value;
        return movieDetails;
    }
</script>
